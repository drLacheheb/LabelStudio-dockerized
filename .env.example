# Database Configuration
POSTGRES_USER=labelstudio_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=labelstudio_db
POSTGRES_PORT=5432

# Label Studio Admin User
LS_USERNAME=admin@example.com
LS_PASSWORD=your_secure_admin_password

# Backup Configuration
# Cron schedule for backups (Format: minute hour day month day-of-week)
# Default: 0 2 * * * (Daily at 2am)
CRON_SCHEDULE="0 2 * * *"

# Google Drive Backup Configuration
# The ID of the Google Drive folder where backups will be stored
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
# Ensure ./backups/google-drive-credentials.json exists with your service account key
