# Database Configuration
POSTGRES_USER=labelstudio_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=labelstudio_db
POSTGRES_PORT=5432

# Label Studio Admin User
LS_USERNAME=admin@example.com
LS_PASSWORD=your_secure_admin_password

# Backup Configuration
# Cron schedule for backups (Format: minute hour day month day-of-week)
# Default: 0 2 * * * (Daily at 2am)
CRON_SCHEDULE="0 2 * * *"
# WebDAV Backup Configuration (Example: Koofr)
# URL for Koofr WebDAV (including folder)
WEBDAV_URL=https://app.koofr.net/dav/Koofr/label-studio-backups
# Your WebDAV Username (e.g., email)
WEBDAV_USERNAME=your_email@example.com
# Your WebDAV App Password
WEBDAV_PASSWORD=your_app_password_here
